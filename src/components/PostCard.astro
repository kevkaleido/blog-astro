---
const { post } = Astro.props;
import { Image } from "astro:assets";
import FormattedDate from "./FormattedDate.astro";
---

<a href={`/blog/${post.slug}`} class="block">
    <article
        class="mx-auto overflow-hidden bg-white shadow-lg transition-all duration-300 hover:shadow-xl dark:bg-gray-800"
    >
        <div class="relative">
            <Image
                src={post.data.image}
                class="h-48 w-full object-cover"
                width={800}
                height={400}
                alt={post.data.title}
            />
            <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black to-transparent p-4">
                <h2 class="text-2xl font-bold text-white">{post.data.title}</h2>
            </div>
        </div>
        <div class="p-4">
            <p class="mb-2 text-sm text-gray-600 dark:text-gray-300">{post.data.summary}</p>
            <div class="flex items-center justify-between">
                <span class="text-sm font-medium text-gray-500 dark:text-gray-400">
                    <FormattedDate date={post.data.date} />
                </span>
                <div class="flex space-x-2">
                    {post.data.tags &&
                        post.data.tags.map((tag: string) => (
                            <span
                                class="rounded-full bg-gray-200 px-2 py-1 text-xs font-semibold text-gray-700 dark:bg-gray-700 dark:text-gray-300"
                            >
                                {tag}
                            </span>
                        ))}
                </div>
            </div>
        </div>
    </article>
</a>
