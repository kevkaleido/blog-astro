---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<li class="link-card">
	<a href={href}>
		<h2>
			{title}
			<span>&rarr;</span>
		</h2>
		<p>
			{body}
		</p>
	</a>
</li>

<style>
	.link-card {
		list-style: none;
		display: flex;
		padding: 1px;
		background-color: #e0f7fa; /* Light soothing teal */
		background-image: none;
		background-size: 400%;
		border-radius: 10px;
		background-position: 100%;
		transition: background-position 0.6s ease-in-out, box-shadow 0.6s ease-in-out;
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Gentle shadow for depth */
	}
	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.6;
		padding: calc(1.5rem - 1px);
		border-radius: 10px;
		color: #004d40; /* Calming dark teal */
		background-color: #e0f7fa; /* Light soothing teal */
		transition: background-color 0.6s ease-in-out, opacity 0.3s ease-in-out;
		opacity: 0.85;
	}
	.link-card > a:hover {
		background-color: #b2ebf2; /* Slightly brighter on hover */
		opacity: 1;
	}
	h2 {
		margin: 0;
		font-size: 1.5rem;
		transition: color 0.6s ease-in-out;
		color: #00796b; /* Calm, cool green */
	}
	p {
		margin-top: 0.75rem;
		margin-bottom: 0;
		color: #004d40; /* Matching body text */
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: linear-gradient(135deg, #e0f7fa, #b2ebf2, #80deea);
		box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15); /* Softer, relaxing glow */
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: #004d40; /* Calm green accent on hover */
	}
</style>
