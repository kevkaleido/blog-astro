---
import HeaderLink from "./HeaderLink.astro";
import ThemeIcon from "./ThemeIcon.astro";
import LOGO from "./images/logo.png";
---

<header>
  <nav class="flex items-center justify-between py-10">
    <div>
      <a href="/">
        <div class="flex items-center justify-between gap-3">
          <img
            class="rounded-lg shadow-sm hover:shadow-md transition-shadow duration-300 ease-in-out"
            src={LOGO.src}
            alt="logo"
            width={36}
            height={36}
          />
        </div>
      </a>
    </div>

    <div class="flex items-center text-base leading-6 gap-6">
      <HeaderLink
        href="/"
        class="header-link"
      >
        Home
      </HeaderLink>
      <HeaderLink
        href="/blog"
        class="header-link"
      >
        Blog
      </HeaderLink>
      <HeaderLink
        href="/about"
        class="header-link"
      >
        About
      </HeaderLink>
      <ThemeIcon />
    </div>
  </nav>
</header>

<style>
  .header-link {
    position: relative;
    color: var(--text-color);
    transition: color 0.3s;
  }

  .header-link::after {
    content: '';
    position: absolute;
    width: 100%;
    height: 2px;
    bottom: -4px;
    left: 0;
    background-color: var(--accent-color);
    transform: scaleX(0);
    transition: transform 0.3s ease-in-out;
  }

  .header-link:hover::after {
    transform: scaleX(1);
  }

  :root {
    --text-color: #4a5568;
    --accent-color: #718096;
  }

  :global(.dark) {
    --text-color: #e2e8f0;
    --accent-color: #a0aec0;
  }
</style>
